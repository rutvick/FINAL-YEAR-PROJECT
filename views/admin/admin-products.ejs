    <section class="section-content">
      <div class="container">

        <header class="section-heading">
          <h2 class="section-title" style="color: gray; font-family:sans-serif">Laptops</h2>
        </header><!-- sect-heading -->
        <div class="row">
          <% if(prods.length>0) { %>
            <% for (let product of prods) { %>

              <div class="col-md-4">

                <figure class="card card-product-grid">
                  <div class="img-wrap">

                    <img src="<%= product.imageUrL %>">
                  </div> <!-- img-wrap.// -->
                  <figcaption class="info-wrap">
                    <div class="fix-height">
                      <a href="#" class="title">
                        <%= product.modelname %>
                      </a>
                      <div class="price-wrap mt-2">
                        <span class="price">₹ <%= product.price %></span>

                      </div> <!-- price-wrap.// -->
                    </div>

                    <div style="display: flex;">
                      <button href="/admin/edit-product/<%= product.productid %>?edit=true" class="btn btn-outline-success">Edit</button>
                      <form action="/admin/delete-product" method="POST" style="padding-left: 10px;">
                        <input type="hidden" value="<%= product.productid %>" name="productid">
                        <button href="#" class="btn btn-outline-danger">Delete</button>
                      </form>
                    </div>

                  </figcaption>
                </figure>

              </div>
              <% } %>
                <% } else { %>
                  <h1> no product found</h1><!-- col.// -->
                  <% } %>
        </div> <!-- row end.// -->
        <br><br>
      </div> <!-- container .//  -->
    </section>
